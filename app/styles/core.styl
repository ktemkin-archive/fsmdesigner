opacity(n)
  opacity n
  filter unquote('progid:DXImageTransform.Microsoft.Alpha(Opacity=' + round(n * 100) + ')')

fade(n)
  webkit-transition: opacity n ease-in-out;
  -moz-transition: opacity n ease-in-out;
  -o-transition: opacity n ease-in-out;
  -ms-transition: opacity n ease-in-out;
  transition: opacity n ease-in-out;



non-selectable()
  -webkit-user-select none
  -khtml-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none

ui-framing()
  position absolute
  display block

body
  overflow hidden

#toolbar
  ui-framing()
  box-sizing border-box
  height 36px
  width 100%
  top 0px
  left 0px
  right 0px
  padding 8px
  padding-top 5px
  background rgb(238,238,238)
  background -moz-linear-gradient(top,  rgba(238,238,238,1) 0%, rgba(204,204,204,1) 100%)
  background -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(238,238,238,1)), color-stop(100%,rgba(204,204,204,1)))
  background -webkit-linear-gradient(top,  rgba(238,238,238,1) 0%,rgba(204,204,204,1) 100%)
  background -o-linear-gradient(top,  rgba(238,238,238,1) 0%,rgba(204,204,204,1) 100%)
  background -ms-linear-gradient(top,  rgba(238,238,238,1) 0%,rgba(204,204,204,1) 100%)
  background linear-gradient(to bottom,  rgba(238,238,238,1) 0%,rgba(204,204,204,1) 100%)
  filter progid:DXImageTransform.Microsoft.gradient( startColorstr='#eeeeee', endColorstr='#cccccc',GradientType=0 )
  button
    font-family 'Droid Sans', sans-serif
    font-size 14px

#error_bar
  ui-framing()
  non-selectable()
  display none
  box-sizing border-box
  height 32px
  width 100%
  top 36px
  left 0px
  right 0px
  padding 8px
  padding-top 5px
  z-index 1000
  font-size 16px
  vertical-align: middle 
  background rgba(128, 38, 48, 0.77)
  font-family 'Droid Sans', sans-serif
  text-align center

  fade 0.1s


#toolbar button, #toolbar, #toolbar div
  non-selectable()
  -webkit-touch-callout none

#canvas
  non-selectable()
  ui-framing()
  height auto
  width 100%
  background #EEE
  margin 0px
  padding 0px
  top 36px
  left 0px
  right 0px



.unsupported
  font-family 'Droid Sans', sans-serif
  font-size 18px
  color #222
  padding 30px
  a
    color #222

#divDismissHelp
  margin-top 25px
  text-align center

#fileSubmit
  margin-top 50px

#btnDismissHelp
  margin-top 20px
  &:hover
    background -webkit-gradient( linear, left top, left bottom, color-stop(0.05, #dfdfdf), color-stop(1, #ededed) )
    background -moz-linear-gradient( center top, #dfdfdf 5%, #ededed 100% )
    filter 'progid:DXImageTransform.Microsoft.gradient(startColorstr="#dfdfdf", endColorstr="#ededed")'
    background-color #dfdfdf
  &:active
    position relative
    top 1px

#btnDismissHelp,
#fileSubmit
  margin 10px
  min-width 300px
  height 50px
  background-color #eee
  border-style 1px solid #000
  moz-box-shadow inset 0px 1px 0px 0px #ffffff
  -webkit-box-shadow inset 0px 1px 0px 0px #ffffff
  box-shadow inset 0px 1px 0px 0px #ffffff
  background -webkit-gradient( linear, left top, left bottom, color-stop(0.05, #ededed), color-stop(1, #dfdfdf) )
  background -moz-linear-gradient( center top, #ededed 5%, #dfdfdf 100% )
  filter 'progid:DXImageTransform.Microsoft.gradient(startColorstr="#ededed", endColorstr="#dfdfdf")'
  background-color #ededed
  -moz-border-radius 6px
  -webkit-border-radius 6px
  border-radius 6px
  border 1px solid #dcdcdc
  display inline-block
  padding 6px 24px
  text-decoration none
  font-weight 700
  font-family 'Droid Sans', sans-serif
  font-size 18px
  color #333



.keyname
  font-weight 700
  border 1px solid #fff
  -moz-border-radius 6px
  border-radius 6px
  padding 2px 4px 2px 4px
  background-color #fff
  color #333
  margin 3px

#helpPanel li
  line-height 20px

a
  color black
p
  margin 30px 0
  line-height 20px

.center
  text-align center

textarea
  display none
  width 75%
  height 400px
  margin 0 auto

#backend
  display none


