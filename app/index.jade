doctype 5
html(lang="en")
  head
    title FSMDesigner
    link(href='http://fonts.googleapis.com/css?family=Droid+Sans:400,700', rel='stylesheet', type='text/css')
    link(href='stylesheets/fsm.css', rel='stylesheet', type='text/css')
    script(src='javascripts/vendor.js')
    script(src='javascripts/fsm.js')
    script require('main')

  body
    include ui/toolbar

    include ui/text_field.jade

    include ui/canvas
    include ui/help



    #staging
      i#cancelOpen.icon-remove-sign
      form#openform(action="iehelper.php", method="post", enctype="multipart/form-data")
        h1 Select a file:
        p Use the controls below to select the file you'd like to open:
        br
        #fileControls
          #fileOpenControl
            input#fileOpen(type="file", name="fileOpen", accept=".fsmd") 
            br
          input#fileSubmit(type="submit", name="fileSubmit", value="Open File")
        
    #backend
        form#genhdl(action="genhdl.php", method="POST")
            input#toHDL(name="fsm")


